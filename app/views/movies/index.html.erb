<h1>Listing movies</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Director</th>
    <th>Description</th>
    <th>Release date</th>
    <th>Length</th>
    <th>Extras</th>
  </tr>

<% for movie in @movies %>
  <tr>
    <td><%=h movie.title %></td>
    <td><%=h movie.director_id %></td>
    <td><%=h movie.description %></td>
    <td><%=h movie.release_date %></td>
    <td><%=h movie.length %></td>
    <td><%=h movie.extras %></td>
    <td><%= link_to 'Show', movie %></td>
    <td><%= link_to 'Edit', edit_movie_path(movie) %></td>
    <td><%= link_to 'Destroy', movie, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

