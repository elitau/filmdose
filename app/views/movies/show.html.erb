<p>
  <b>Title:</b>
  <%=h @movie.title %>
</p>

<p>
  <b>Directors:</b>
  <%=h @movie.directors.collect(&:name).join(', ') %>
</p>

<p>
  <b>Actors:</b>
  <%=h @movie.actors.collect(&:name).join(', ') %>
</p>

<p>
  <b>Description:</b>
  <%=h @movie.description %>
</p>

<p>
  <b>Release date:</b>
  <%=h @movie.release_date %>
</p>

<p>
  <b>Release date:</b>
  <%= image_tag @movie.cover.url %>
</p>

<p>
  <b>Length:</b>
  <%=h @movie.length %>
</p>

<p>
  <b>Amazon-ID(ASIN):</b>
  <%=h @movie.amazon_id %>
</p>


